{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-alert": "off",
        "prefer-arrow-callback": "off",
        "func-names": "off",
        "arrow-parens": [
            2,
            "always"
        ],
        "no-param-reassign": "off"
    },
    "globals": {
        "cy": true
    }
}
