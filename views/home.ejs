<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link type="text/css" rel="stylesheet" href="/home.css">
    <title>Cookmaster</title>
  </head>
  <body>
    <nav class="navbar">
      <h1>Cookmaster</h1>
      <% if (user) { %>
        <a data-testid="logout" href="/logout">Logout</a>
        <% } %>
      <a data-testid="login" href="/login" >Login</a>
    </nav>

    <h2>Receitas</h2>
    <div class='buttonContainer'>
      <button class="button" data-testid="buscar-receita">Buscar Receitas</button>
      <% if (user) { %>
        <button class="button" data-testid="nova-receita">Nova Receita</button>
      <% } %>
    </div>

      </div>
      <h2>Receitas</h2>
      <div class="box">
        <% recipes.forEach(recipe => { %>
          <div class="recipe">
            <p><%= recipe.name %></p>
            <p><%= recipe.user %></p>
            <a href=<% recipe.id %>>Ver mais</a>
          </div>
        <% }) %>
      </div>
  </body>
</html>
