<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Home</title>
  </head>
  <body>
    <h1>Boas vindas ao Cookmaster!</h1>
    <% if (recipes.user) { %>
    <span>Usu√°rio logado: <%=user.name %></span>
    <button data-testid="logout">Logout</button>
    <% } else { %>
    <a href="/login" data-testid="login">Login</a>
    <% } %>

    <button data-testid="buscar-receita">Buscar Receita</button>

    <p>Receitas:</p>
    <ul>
      <% recipes.forEach(recipe => { %>
      <li><%= recipe.name %></li>
      <span><%= recipe.user %></span>
      <a>Ver mais</a>
      <% }) %>
    </ul>
    <% if (recipes.user) { %>
    <button data-testid="nova-receita">Nova receita</button>
    <% } else { %> <% } %>
  </body>
</html>
