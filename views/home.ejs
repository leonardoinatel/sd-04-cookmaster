<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Home</title>
  </head>
  <body>
    <h1>Cookmaster</h1>
    <% if (!islogged) { %> <a href='/login' data-testid='login'>Login</a>  <% } %>
    <% if (islogged) { %> <a href='/logout' data-testid='logout'>Logout</a>  <% } %>
    <button data-testid='buscar-receita'>Buscar Receitas</button>
    <% if (islogged) { %> <button data-testid='nova-receita'>Nova Receitas</button> <% } %>
    <ul>
      <h1>Receitas</h1>
      <% recipes.forEach(({user, recipe, id}) => { %>
      <li><%= `${recipe} ${user}` %></li>
      <a href= <%=`recipes/${id}`%> >Ver mais</a>
      <% }) %>
    </ul>
  </body>
</html>
