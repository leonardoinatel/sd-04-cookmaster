<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Home</title>
    <style>
    </style>
  </head>
  <body>
    <header>
      <nav>
        <h1>Cookmaster</h1>

        <% if (token) { %>
          <button data-testid="logout" onclick="window.location.pathname='/logout'">Logout</button>
          <% } else { %>
        <a href="/login" data-testid="login">login</a>
        <% } %>

      </nav>
    </header>
    <div>
      <h1>Receitas</h1>

      <% if (token) { %>
        <button onclick="window.location.pathname='recipes/new'" data-testid="nova-receita" >Nova Receita</button>
        <button onclick="window.location.pathname='me/recipes'" data-testid="minhas-receitas" >Minhas Receitas</button>
        <button onclick="window.location.pathname='me/edit'" data-testid="minha-conta" >Minha Conta</button>
      <% } %>

   <button onclick="window.location.pathname='recipes/search'" data-testid="buscar-receita">Buscar Receita</button>
    </div>
    <ul>
      <% recipes.forEach(({name, user, id}) => { %>
        <li>
          <%= `${name} - ${user}` %>
          <a href=<%=`recipes/${id}` %>>Ver mais</a>
        </li>
     <% }) %>
    </ul>
  </body>
</html>
