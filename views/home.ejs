<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
      crossorigin="anonymous"
    />
    <title>Cookmaster - Home</title>
  </head>
  <body>
    <div class="navbar navbar-expand-lg navbar-light bg-light">
      <h5>Cookmaster</h5>
      <% if (user == null) { %>
        <a data-testid="login" class="nav-link" href="/login">Login</a>
      <%} else {%>
        <a data-testid="logout" class="nav-link" href="/logout"> Logout</a>
      <%}%>
    </div>
    <div class="container">
      <h2>Receitas</h2>
      <div class="mb-3 container">
        <% if (user == null) { %>
          <input data-testid="buscar-receita" type="button" value="Buscar Receitas" />
        <%} else {%>
          <input data-testid="nova-receita" type="button" value="Nova Receita" />
          <input data-testid="buscar-receita" type="button" value="Buscar Receitas" />
        <%}%>
      </div>
      <% recipes.forEach(food => { %>
      <div class="container-sm">
        <div class="p-3 mb-2 bg-info text-white">
          <div class="row">
            <div class="col">
              <p class="d-flex justify-content-center"><%= food.name %></p>
              <p class="d-flex justify-content-center"><%= food.user %></p>
            </div>
            <div class="col align-self-end">
              <a class="text-light d-flex justify-content-center" href="/login">Ver Mais</a>
            </div>
          </div>
        </div>
      </div>
      <%})%>
    </div>
  </body>
</html>
