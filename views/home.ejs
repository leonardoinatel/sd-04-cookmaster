<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Home</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <header>
      <h1>Boas vindas ao Cookmaster!</h1>

      <% if (!user) { %>

      <a class="btn btn-dark" href="/login" data-testid="login">Login</a>

      <% } else {%>

      <a class="btn btn-dark" href="/logout" data-testid="logout">Logout</a>

      <% } %>
    </header>

    <p>Cookmaster</p>

    <h3>Receitas</h3>

    <% recipes.forEach((recipe) => { %>
    <div class="card text-white bg-success mb-3 text-center">
      <h4 class="card-title"><%= recipe.name %></h4>
      <p class="card-text"><%= recipe.user %></p>
      <a class="btn btn-dark" href="/recipes/<%= recipe.id %>">Ver mais</a>
    </div>
    <% }) %> <% if (user) { %>
    <a class="btn btn-dark" href="/recipes/new" data-testid="nova-receita">Nova Receita</a>
    <% } %>

    <a class="btn btn-dark" data-testid="buscar-receita">Buscar Receita</a>
  </body>
</html>
