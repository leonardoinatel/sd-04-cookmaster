<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Home</title>
  </head>
  <body>
    <h1>Boas vindas ao Cookmaster!</h1>

    <p>Cookmaster</p>

    <p>Receitas</p>

    <% receitas.forEach((recipe) => { %>
    <h3><%= recipe.nome %></h3>
    <h5><%= recipe.user %></h5>
    <a href="/:id">Ver mais</a>
    <% }) %> <%if (user) { return %>

    <button data-testid="nova-receita">Nova Receita</button>

    <% } %>

    <button data-testid="buscar-receita">Buscar Receita</button>
  </body>
</html>
