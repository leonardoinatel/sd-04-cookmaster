<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Home</title>
    <link type="text/css" rel="stylesheet" href="/styles/styles.css">
  </head>
  <body>
    <div>
      <div class="title">
        <div>
          <span>Cookmaster</span>
          <span>Login</span>
        </div>
      </div>
      <h2>Receitas</h2>
      <div class="box">
        <% recipes.forEach(recipe => { %>
          <div class="recipe">
            <h3><%= recipe.name %></h3>
            <p><%= recipe.user %></p>
            <a link=#>Ver mais</a>
          </div>
        <% }) %>
      </div>

    </div>
  </body>
</html>
