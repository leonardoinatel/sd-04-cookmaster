<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Home</title>
  </head>
  <body>
    <h1>Cookmaster</h1>
    <a data-testid="buscar-receita" href="/recipes/search">Buscar Receita</a>
    <% if (token) { %>
      <button data-testid="nova-receita">Nova Receita</button>
    <% } %>
    <a data-testid="login" href="/login" >Login</a>
    <ul>
      <h1>Receitas</h1>
      <% recipes.forEach(({user, recipe, id}) => { %>
        <li>
          <%=`${recipe} ${user}`%>
          <a href=<%= `recipes/${id}` %> >Ver mais</a>
        </li>
      <% }) %>
    </ul>
  </body>
</html>
