<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Home</title>
  </head>
  <body>
    <h1>Boas vindas ao Cookmaster!</h1>

    <p>Cookmaster</p>

    <h3>Receitas</h3>

    <% recipes.forEach((recipe) => { %>
    <h4><%= recipe.name %></h4>
    <p><%= recipe.user %></p>
    <a href="/recipes/<%= recipe.id %>" role="button">Ver mais</a>
    <% }) %>

    <a href="/recipes/new" data-testid="buscar-receita">Nova Receita</a>
    <button data-testid="buscar-receita">Buscar Receita</button>
  </body>
</html>
