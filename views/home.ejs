<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Home</title>
  </head>
  <body>
    <%- include('navbar', {user}) %>
    <h1>Cookmaster</h1>
    <h3>Receitas</h3>
    <button
      type="button"
      data-testid="buscar-receita"
      onclick="window.location.pathname='/recipes/search'"
    >
      Buscar Receita
    </button>
    <% if (user) { %>
    <button
      type="button"
      data-testid="nova-receita"
      onclick="window.location.pathname='/recipes/new'"
    >
      Nova Receita
    </button>
    <% } %>
    <div>
      <% recipes.forEach((recipe) => { %>
      <p><%= recipe.recipeName %></p>
      <p><%= recipe.userName %></p>
      <a href="/recipes/<%= recipe.recipeID %>">Ver mais</a>
      <% }) %>
    </div>
  </body>
</html>
