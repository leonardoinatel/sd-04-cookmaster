<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Home</title>
  </head>
  <body>
    <%- include('./header.ejs', {user}); %>
    <h2>Receitas:</h2>
    <div>
      <% allRecipes.map(recipe => { %>
      <div>
        <h3>Receita: <%= recipe.name %></h3>
        <div>
          <h4>Autor: <%= recipe.user %></h4>
          <a href=<%= `/recipes/${recipe.id}` %>>Ver mais</a>
        </div>
      </div>
      <%})%>
    </div>
    <div>
      <% if (user) { %>
      <a href="/recipes/new" data-testid="nova-receita">Nova Receita</a>
      <a data-testid="minhas-receitas" href="/me/recipes">Minhas Receitas</a>
      <% } %>
      <a href="/recipes/search" data-testid="buscar-receita">Buscar Receita</a>
    </div>
  </body>
</html>
