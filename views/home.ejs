<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Home</title>
  </head>
  <body>
    <h1>Cookmaster</h1>
    <button data-testid="buscar-receita" >Buscar Receita</button>
    <% if (user) { %>
      <button data-testid="nova-receita" >Nova Receita</button>
      <button data-testid="logout" >Logout</button>
    <% } %>
    <button data-testid="login" href="/login">Login</button>
    <div>
      <h1>Receitas</h1>
      <ul>
        <% recipe.forEach((recipe) => { %>
          <li><%= recipe.name %></li>
          <li><%= recipe.user %></li>
          <a href="/recipes/<%= recipe.id%>">Ver mais</a>
        <% }) %>
      </ul>
    </div>
  </body>
</html>
