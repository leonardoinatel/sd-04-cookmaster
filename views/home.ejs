<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Cookmaster - Home</title>
</head>

<body>
  <h3>Cookmaster</h3>

  <% if (user) { %>
  <p>Usu√°rio atual: <%= `${user.name} ${user.lastName}` %></p>
  <button data-testid="nova-receita">Nova Receita</button>
  <a href='/logout'" data-testid=" logout">Logout</a>
  <%}%>
  <% if (!user) { %>
  <a href="/login" data-testid="login">Login</a>
  <% } %>

  <button data-testid="buscar-receita">Buscar Receita</button>
  <h1>Receitas</h1>
  <% recipes.forEach((recipe) => { %>
  <li> <%= recipe.name %> <%= recipe.user %>
  <a href='/recipes/<%= recipe.id %>'>Ver mais</a></li>
  <% }); %>
</body>

</html>
