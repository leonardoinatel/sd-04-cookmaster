<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Home</title>
  </head>
  <body>
    <%- include('header') %>
    <h1>Receitas</h1>
    <div>
      <% recipes.forEach((recipe) => { %>
        <div>
          <h3><%= recipe.name %></h3>
          <p><%= recipe.user %></p>
          <a href="/recipes/<%= recipe.id %>">Ver mais</a>
        </div>
      <% }) %>
    </div><br />
    <% if (user) { %>
      <a data-testid="nova-receita">Nova Receita</a>
    <% } %>
    <button data-testid="buscar-receita">Buscar Receita</button>
  </body>
</html>
