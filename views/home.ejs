<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
      crossorigin="anonymous"
    />
    <title>Cookmaster - Home</title>
  </head>
  <body>
    <div class="navbar">
      <h1>Cookmaster!</h1>

      <% if(user) { %>
      <p><%= console.log(user) %></p>
      <a href="/">
        <h3 data-testid="logout">Logout</h3>
      </a>
      <%} else{ %>
      <a href="/login">
        <h3 data-testid="login">Login</h3>
      </a>

      <%}%>
    </div>

    <h1>Receitas</h1>

    <% if(user) { %>
    <button data-testid="nova-receita">Nova Receita</button>

    <%}%>
    <button data-testid="buscar-receita"><a href="/recipes/search">Buscar Receitas</a></button>

    <% recipes.forEach(recipe => { %>
    <h3><%= recipe.user + ' ' + recipe.name%></h3>
    <a class="btn btn-primary" href="/recipes/<%= recipe.id %>">Ver mais</a>

    <% })%>
  </body>
