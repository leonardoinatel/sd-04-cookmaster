<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
      crossorigin="anonymous"
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Home</title>
  </head>
  <body>
    <header>
      <h3>Cookmaster</h3>
      <% if(user){%>
      <h5><%= `${user.firstName} ${user.lastName}`%></h5>
      <a data-testid="logout" class="btn btn-light" href="/logout">Logout</a>
      <%} else {%>
      <a data-testid="login" class="btn btn-light" href="/login">Login</a>
      <% }%>
    </header>
    <div>
      <h1><%= recipe.name %></h1>
      <h3><%= recipe.user %></h3>
      <% if(user && user.id === recipe.userId) { %>
      <a data-testid="editar-receita" href="/editar">editar</a>
      <a data-testid="excluir-receita" href="/delete">excluir</a>
      <% } %>
    </div>
    <h3>Ingredientes</h3>
    <ol>
      <% recipe.ingredients.split(",").map((result) => { %>
      <li><%= result %></li>
      <% }) %>
    </ol>
    <h3>Mode de preparo</h3>
    <p> <%= recipe.instructions %></p>
  </body>
</html>
