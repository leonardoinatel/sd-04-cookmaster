  <body>
    <div>
      <% if (token) { %>
        <button data-testid="editar-receita" onclick="window.location.pathname='/editar'">Editar Receita</button>
        <button data-testid="excluir-receita" onclick="window.location.pathname='/delete'">Excluir Receita</button>
      <% } %>
