<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Nova Receita</title>
  </head>
  <body>
    <%- include('../templates/header.ejs', {user}) %>
    <form action="/recipes/<%= id %>" method="POST">
      <div>
        <h1>Editar Receita</h1>
        <label for="nameRecipe">Nome da Receita:</label>
        <input
          type="text"
          name="name"
          id="nameRecipe"
          value="<%= name %>"
          data-testid="nome-receita"
        />
        <h3>Ingredientes:</h3>
        <div>
          <input type="hidden" id="ingredients" value="<%= ingredients %>" />
          <ul id="listIngredients"></ul>
        </div>
        <div>
          <input id="ingredientsInput" type="text" data-testid="ingredientes" name="ingredients" />
          <button id="add" data-testid="adicionar-ingrediente">Adicionar Ingrediente</button>
        </div>
        <div>
          <label for="nameRecipe">Modo de Preparo</label>
          <input
            type="text"
            name="instructions"
            id="nameRecipe"
            value="<%= instructions %>"
            data-testid="modo-de-preparo"
          />
        </div>
      </div>
      <a href="/">Voltar</a>
      <button type="submit" data-testid="postar-receita">Salvar Receita</button>
    </form>
  </body>
  <script>
    const input = document.querySelector('#ingredientsInput');
    const ul = document.querySelector('#listIngredients');
    const ingredients = document.querySelector('#ingredients');
    const li = document.createElement('li');
    const btn = document.createElement('button');
    let arrayIngredients = [];

    const addItensExist = () => {
      '<%= ingredients %>'.split(',').forEach((item) => {
        arrayIngredients.push(item);
      });

      arrayIngredients.forEach((item) => {
        li.innerText = item;
        btn.innerText = 'Excluir Ingrediente';

        ul.appendChild(li);
        ul.appendChild(btn);

        btn.addEventListener('click', () => {
          const deleteIngredient = arrayIngredients.filter((item) => item == li.innerText);
          arrayIngredients.splice(arrayIngredients.indexOf(deleteIngredient), 1);
          ingredients.value = arrayIngredients.join(',');
          li.remove();
          btn.remove();
        });
      });
    };

    document.querySelector('#add').addEventListener('click', () => {
      li.innerText = input.value;
      btn.innerText = 'Excluir Ingrediente';

      arrayIngredients.push(input.value);
      ingredients.value = arrayIngredients.join(','); // para salvar no banco de dados

      ul.appendChild(li);
      ul.appendChild(btn);
      input.value = null;

      btn.addEventListener('click', (e) => {
        const deleteIngredient = arrayIngredients.filter((item) => item == li.innerText);
        arrayIngredients.splice(arrayIngredients.indexOf(deleteIngredient), 1);
        ingredients.value = arrayIngredients.join(',');
        li.remove();
        btn.remove();
      });
    });

    window.onload = () => addItensExist();
  </script>
</html>
